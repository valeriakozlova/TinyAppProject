<!-- views/urls_index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
</head>
<body>

  <header>
    <% include ./partials/_header %>
  </header>

  <center><a href=/urls/new> GET A SHORT URL</a> <br /><br /></center>

    <ul>


      <% for (var url in urls) { %>
      <li>Short URL: <%= url %> Long URL: <a href= <%= urls[url] %> ><%= urls[url] %></a>
          <form method="GET" action="/urls/<%= url %>">
          <input type="submit" class="button" value="EDIT"></form>
          <form method="POST" action="/urls/<%= url %>/delete">
          <input type="submit" class="button" value="DELETE"></form>
      </li>
      <% }; %>

    </ul>



</body>
</html>
