<header>

  <% if(user_id){ %>
   <center><h1 >WELCOME <%= user.email %> </h1></center>

  <form method="POST" action="/logout" >
  <center><input type="submit" value="LOG OUT" style="background-color: #4CAF50;
      color: white;
      padding: 15px 42px;
      text-align: center;
      font-size: 16px;"></form></center>
  <br/> <br/> <br/>

 <% } else{ %>
    <br/> <br/> <br/>
    <form method="GET" action="/login">
